<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdff9c">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_symbol" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="108dp">

        <TextView
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:textColor="#004400"
            android:fontFamily="sans-serif"
            android:layout_weight="1.0"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2"
            android:textColor="#004400"
            android:fontFamily="sans-serif"
            android:layout_weight="1.0"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <GridLayout
        android:id="@+id/gl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        android:rowCount="3"
        android:columnCount="3">

        <ImageButton
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.0"
            android:layout_rowWeight="1.0"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="2dp"/>
        <ImageButton
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.0"
            android:layout_rowWeight="1.0"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="2dp"/>
        <ImageButton
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.0"
            android:layout_rowWeight="1.0"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="2dp"/>
        <ImageButton
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.0"
            android:layout_rowWeight="1.0"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="2dp"/>
        <ImageButton
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.0"
            android:layout_rowWeight="1.0"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="2dp"/>
        <ImageButton
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.0"
            android:layout_rowWeight="1.0"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="2dp"/>
        <ImageButton
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.0"
            android:layout_rowWeight="1.0"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="2dp"/>
        <ImageButton
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.0"
            android:layout_rowWeight="1.0"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="2dp"/>
        <ImageButton
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1.0"
            android:layout_rowWeight="1.0"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="2dp"/>

    </GridLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/gl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="45dp"
            android:layout_weight="1.0"
            android:backgroundTint="#ff0000"
            android:text="restart"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/tb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_baseline_volume_up_24" />

    </LinearLayout>

</RelativeLayout>